<div class="show">
	<table class="table">
		<thead>
			<tr>
				<th colspan="1"></th>
				<th>title</th>
				<th>picture</th>
				<th>comments</th>
				<th>favorites</th>
			</tr>
		</thead>
	　<% posts.each do |post| %>
	　  <tbody>
			<tr>
				<td><%= attachment_image_tag post.user, :profile_image, size:"150x150", fallback: "no_image.jpg",  class: "img-circle show_prof_image" %></td>
				<td><%= link_to post.title ,post_path(post.id) ,  class: "show_prof_title"%></td>
				<td><%= link_to post_path(post.id) do%>
			         <%= attachment_image_tag post, :image, size:"400x300" %>
			       <% end %>
			    </td>
			    <td><%=post.post_comments.count %>　comments</td>
			    <td>
			    	<% if post.favorited_by?(current_user) %>
			    		<%= link_to  post_favorites_path(post), method: :delete do%>
			    		  <i class="fas fa-heart" style="color:red;"></i>
			    		<% end %>
			    	<% else %>
			    		<%= link_to  post_favorites_path(post),method: :post do%>
			    		  <i class="far fa-heart"></i>
			    		<% end %>
			    	<% end %>
			    </td>
			</tr>
		</tbody>
	　<% end %>
	</table>
</div>