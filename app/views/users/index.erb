<% if flash[:notice] %>
	<div class="success_message">
		<p><%=flash[:notice] %></p>
	</div>
<% end %>
<%= render "layouts/prof", user:@user %>
<div class="index_main">
	<table class="table">
		<thead>
			<tr>
				<th colspan="1"></th>
				<th>name</th>
				<th>nomber of posts</th>
				<th colspan="1"></th>
			</tr>
		</thead>
	  <% @users.each do |user| %>
		<tbody>
			<tr>
				<td class="index_prof_image">
				　　<%= link_to user_path(user.id) do %>
				    　　<%= attachment_image_tag user, :profile_image, size:"150x150", format: "jpeg", fallback: "no_image.jpg",  class: "img-circle" %>
				  　<% end %>
				 </td>
				<td class="index_content"><%= link_to user.name, user_path(user.id) %></td>
				<td class="index_content"><p>　　　<%= user.posts.count%>　posts</p></td>
				<td class="index_content"><%=link_to "show",user_path(user.id)%></td>
			</tr>
		</tbody>
	  <% end %>
	</table>
</div>